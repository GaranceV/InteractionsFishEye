<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ihm.garance.fisheye.FishEyeView
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fisheyeView"
        android:background="@color/pouet"/>



    <SeekBar
        android:layout_width="match_parent"
        android:layout_marginBottom="170dp"
        android:layout_height="wrap_content"
        android:progress="100"
        android:max="500"
        android:id="@+id/seekBarO"
        android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tvLabel1"
            android:paddingLeft="10dp"
            android:layout_marginBottom="160dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
        <TextView
            android:id="@+id/tvLabel2"
            android:layout_marginBottom="160dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="250" />
        <TextView
            android:id="@+id/tvLabel3"
            android:layout_marginBottom="160dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="500" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:progress="600"
        android:max="2000"
        android:id="@+id/seekBarZ"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvLabel4"
        android:paddingLeft="10dp"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />
    <TextView
        android:id="@+id/tvLabel5"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1000" />
    <TextView
        android:id="@+id/tvLabel6"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="2000" />



    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:progress="200"
        android:max="500"
        android:id="@+id/seekBarR"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tvLabel7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />
    <TextView
        android:id="@+id/tvLabel8"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="250" />
    <TextView
        android:id="@+id/tvLabel9"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="500" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Essaie fisheye !"
        android:id="@+id/buttonFish"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:onClick="tryFishEye"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:onClick="resetFish"/>

</RelativeLayout>
